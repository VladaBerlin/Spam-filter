import mailbox
from bs4 import BeautifulSoup

mbox = mailbox.mbox(r"Спам.mbox")

for i, message in enumerate(mbox):
    content = message.get_payload(decode=True)
    if content:
        text = content.decode("utf-8", "replace")
        soup = BeautifulSoup(text, 'html.parser') #списала с какого-то сайта... текст (вместе с мусором) судя по всему в тэгах span
        item = soup.span
        if item:
            item = item.contents #вот тут получается лист вроде из 1 элемента но ладно
            for elem in item:
                elem = str(elem).strip()
                fl = False
                for symbol in elem: #это я попыталась удалить все что между тэгами <> но оно не оч работает
                    if symbol == '<':
                        fl = True
                    if symbol == '>':
                        fl = False
                    if fl:
                        elem = elem.replace(symbol, '')
            print(item)
